FROM golang:alpine3.16 as builder

#Connection to the mongo database
ARG DATABASE
ARG COLLECTION
ARG IDENTIFIANT_DB
ARG PASSWORD_DB
ARG URL_DB

#Twitter API
ARG CLIENT_ID
ARG SECRET_CLIENT_ID
ARG REDIRECT_URI
ARG CLIENT_URI

WORKDIR /app

COPY go.mod ./
COPY go.sum ./

RUN go mod tidy
RUN go mod download

COPY . ./

RUN go build -o api server.go

FROM alpine:latest as deploy

#Connection to the mongo database
ARG DATABASE
ARG COLLECTION
ARG IDENTIFIANT_DB
ARG PASSWORD_DB
ARG URL_DB

#Twitter API
ARG CLIENT_ID
ARG SECRET_CLIENT_ID
ARG REDIRECT_URI
ARG CLIENT_URI

ENV DATABASE ${DATABASE}
ENV COLLECTION ${COLLECTION}
ENV IDENTIFIANT_DB ${IDENTIFIANT_DB}
ENV PASSWORD_DB ${PASSWORD_DB}
ENV URL_DB ${URL_DB}

ENV CLIENT_ID ${CLIENT_ID}
ENV SECRET_CLIENT_ID ${SECRET_CLIENT_ID}
ENV REDIRECT_URI ${REDIRECT_URI}
ENV CLIENT_URI ${CLIENT_URI}

WORKDIR /app

COPY --from=builder /app/api /app/

EXPOSE 3021

CMD [ "./api", "3021" ]